                        <ul id ="sub_menu_2" class="sub-menu hidden">
                            <li>@Html.ActionLink("Linkedin", "Matching", "Stats", new { @domain = "Linkedin" }, new {})</li>
                            <li>@Html.ActionLink("Google", "Matching", "Stats", new { @domain = "Google" }, new {})</li>
                            <li>@Html.ActionLink("Facebook", "Matching", "Stats", new { @domain = "Facebook" }, new {})</li>
                        </ul>
                    </li>
                </div>

            </div>*@

            <!-- Page content -->
            <div id="page-content-wrapper">
                <!-- Keep all page content within the page-content inset div! -->
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12">
                            @RenderBody()
                        </div>
                        <div class="col-lg-12">
                            <footer>
                                <p>&copy; @DateTime.Now.Year - comScore Webportal</p>
                            </footer>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/site")
    @RenderSection("scripts", required: false)
    
    <script>
        $(document).ready(function () {

            var initMenu = function () {
                var orientation = 'vertical';
                $("#menu").kendoMenu({
                    orientation: orientation
                }).data("kendoMenu").wrapper.css("width", (orientation == "horizontal") ? 600 : 120);
            };

            initMenu();

            $("#sidebar-wrapper").hover(
                function() {
                    $(this).animate({ 'margin-left': '-250px', 'width': '200px' }, 100, function (){});
                },
                function() {
                    $(this).animate({ 'margin-left': '-450px', 'width': '250px'}, 100, function (){});
                }
            );

        });
    </script>



</body>
</html>
